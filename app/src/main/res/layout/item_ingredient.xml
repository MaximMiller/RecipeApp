<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvItemIngredient"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTitleIngredient"
            style="@style/StyleTextItemIngredient"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_size_small"
            android:layout_marginTop="@dimen/text_size_small"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_weight="1"
            tools:text="Творог" />

        <TextView
            android:id="@+id/tvQuantityIngredient"
            style="@style/StyleTextItemIngredient"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/text_size_small"
            android:layout_marginBottom="@dimen/margin_medium"
            android:gravity="end"
            tools:text="350" />

        <TextView
            android:id="@+id/tvUnitOfMeasure"
            style="@style/StyleTextItemIngredient"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/padding_extra_small"
            android:layout_marginTop="@dimen/text_size_small"
            android:layout_marginEnd="@dimen/text_size_small"
            android:layout_marginBottom="@dimen/margin_medium"
            android:gravity="end"
            tools:text="Г" />

    </LinearLayout>

</androidx.cardview.widget.CardView>