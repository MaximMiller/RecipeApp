<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundMainLayout"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_cl_heading_fragment_list_categories">

        <ImageView
            android:id="@+id/iv_heading"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/iv_screenshot_of_the_categories"
            android:scaleType="centerCrop"
            android:src="@drawable/bcg_categories"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_heading"
            style="@style/StyleTextViewTitleHeading"
            android:layout_width="wrap_content"
            android:padding="@dimen/tv_heading_padding_fragment_list_categories"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/tv_heading_margin_start_fragment_list_categories"
            android:layout_marginBottom="@dimen/tv_heading_margin_bottom_fragment_list_categories"
            android:background="@drawable/shape_tv_heading"
            android:gravity="center"
            android:text="@string/tv_heading"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCategories"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:itemCount="6"
        tools:listitem="@layout/item_category"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        android:layout_marginVertical="@dimen/rv_margin_vertical_fragment_list_categories"
        android:layout_marginHorizontal="@dimen/rv_margin_horizontal_fragment_list_categories"/>

</LinearLayout>