<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="android:paddingVertical">@dimen/padding_small</item>
        <item name="android:paddingHorizontal">@dimen/padding_medium</item>
        <item name="cornerRadius">@dimen/margin_medium</item>
    </style>

    <style name="StyleTextViewTitleHeading" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/textTitleHeading</item>
    </style>

    <style name="TextViewTitleHeadingItems" parent="StyleTextViewTitleHeading">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextViewDescriptionItemCategory" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:fontFamily">@font/montserrat_extra_light</item>
        <item name="android:textColor">@color/textDescriptionItemCategory</item>
    </style>
</resources>